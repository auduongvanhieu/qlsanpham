<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".View.UpdateProductActivity">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật sản phẩm"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000000" />
    <EditText
            android:id="@+id/edt_update_product_id"
            android:enabled="false"
            android:textColor="#000000"
            android:hint="Nhập id sản phẩm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/edt_update_name"
            android:textColor="#000000"
            android:hint="Nhập tên sản phẩm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/edt_update_price"
            android:textColor="#000000"
            android:hint="Nhập giá sản phẩm"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/edt_update_choose_img"
                android:textColor="#000000"
                android:hint="Chọn hình"
                android:enabled="false"
                android:inputType="number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_update_choose_img"
                android:text="Chọn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/edt_update_choose_date"
                android:textColor="#000000"
                android:hint="Chọn ngày"
                android:enabled="false"
                android:inputType="number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_update_choose_date"
                android:text="Chọn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn_update"
                android:text="Cập nhật"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_update_cancel"
                android:text="Hủy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>